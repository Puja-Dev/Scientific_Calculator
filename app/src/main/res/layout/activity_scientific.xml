<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pooja.devlal.com.calculator.Scientific"
    android:orientation="vertical">
    <TextView
        android:id="@+id/display"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:hint="
0"
        android:background="#adadff"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="C"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/sine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="sin"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/cos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="cos"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="DEL"
            android:textSize="30dp"/>
    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">

            <Button
                android:id="@+id/tan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="tan"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/exp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="exp"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/cap"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="^"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/log"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="log"
                android:textSize="30dp"/>
        </TableRow>

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4">

        <Button
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30dp"/>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4">

        <Button
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="30dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:textAlignment="viewEnd"
        android:weightSum="4">

        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4">

        <Button
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/decimal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="30dp"/>

        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="30dp"/>

        <Button
            android:id="@+id/sum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30dp"/>
    </TableRow>
    </TableLayout>


</LinearLayout>
